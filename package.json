{
    "scripts": {
        "dist": "npm run build && npm run test",
        "build": "npm run clean && npm run build-node && npm run build-esm && npm run build-declaration",
        "build-node": "esbuild index.ts --minify --bundle --platform=node --outfile=dist/index.cjs",
        "build-esm": "esbuild index.ts --minify --bundle --platform=browser --format=esm --outfile=dist/index.mjs",
        "build-declaration": "tsc",
        "clean": "rm -rf dist",
        "test": "node test.js"
    },
    "devDependencies": {
        "esbuild": "^0.14.38",
        "fast-equals": "^3.0.2",
        "typescript": "^4.6.4"
    }
}
