{
  "name": "datums",
  "version": "1.0.0",
  "description": "Very light reactive data. Efficient & composable.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "dist": "npm run build && npm run test",
    "build": "npm run clean && npm run build-node && npm run build-esm && npm run build-declaration",
    "build-node": "esbuild index.ts --minify --bundle --platform=node --outfile=dist/index.cjs.js",
    "build-esm": "esbuild index.ts --minify --bundle --platform=browser --format=esm --outfile=dist/index.esm.js",
    "build-declaration": "tsc",
    "clean": "rm -rf dist",
    "test": "node tests/node-test.js"
  },
  "devDependencies": {
    "@types/node": "^17.0.31",
    "esbuild": "^0.14.38",
    "fast-equals": "^3.0.2",
    "typescript": "^4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qpwo/datums.git"
  },
  "keywords": [
    "reactive",
    "data",
    "state"
  ],
  "author": "Luke Harold Miles",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/qpwo/datums/issues"
  },
  "homepage": "https://github.com/qpwo/datums#readme"
}
